@using WriterBlog.Entities.Concrete.Dtos;
@model List<NotificationDto>
@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Tüm Bildirimler</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Bildirim</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.NotificationDetils</td>
            <td>@item.NotificationDate.ToShortDateString()</td>
            <td><a href="/admin/AdminNaotification/delete/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
    <td><a href="/admin/AdminNaotification/AddNotification" class="btn btn-info">Bildirim Ekle</a></td>
</table>
