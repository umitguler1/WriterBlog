@using WriterBlog.Entities.Concrete.Dtos;
@model List<CategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<br />
<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>Kategori Adı</th>
    <th>Sil</th>
    <th>Düzenle</th>
</tr>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td><a href="/admin/Category/CategoryDelete/@item.Id" id ="Deletebtn"
            onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz..!');" class="btn btn-danger">Sil</a> </td>
        <td><a href="/admin/category/categoryupdate/@item.Id/" class="btn btn-success">Güncelle</a> </td>
        
      
    </tr>
}
</table>
<br />
<a href="/admin/Category/categoryadd/" class="btn btn-primary">Yeni Kategori Ekle</a>

