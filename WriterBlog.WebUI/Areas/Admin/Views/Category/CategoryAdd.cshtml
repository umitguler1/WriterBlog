@using WriterBlog.Entities.Concrete.Dtos;
@model CategoryDto
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h1>Yeni Kategori    Girişi</h1>
<br />
@using (Html.BeginForm("CategoryAdd", "Category", FormMethod.Post))
{
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Name)
    <br />
    @Html.Label("Kategori Açılaması")
    @Html.TextAreaFor(x=>x.Description,10,3,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Description)

    <br />
    <button class="btn btn-info">Verileri Kaydet</button>

}
