@using WriterBlog.Entities.Concrete.Dtos;
@model CategoryDto
@{
    ViewData["Title"] = "CategoryUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Düzenleme Sayfası</h1>
<br />
@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
{
    @Html.Label("Kategori Id")
    @Html.TextBoxFor(x=>x.Id,new{@class="form-control"})
    <br />
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
    <br />
    @Html.Label("Kategori Açıklaması")
    @Html.TextAreaFor(x=>x.Description,10,3, new{@class="form-control"})
    <br />
    <button class="btn btn-success">Kategoriyi Güncelle</button>

}
