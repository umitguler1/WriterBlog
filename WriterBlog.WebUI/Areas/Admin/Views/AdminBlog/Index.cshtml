@using WriterBlog.Entities.Concrete.Dtos;
@model List<BlogDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body>


    <div class="row border-bottom">
    </div>
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Bloglar</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/Admin/MainPage/Index">Anasayfa</a>
                </li>

                <li class="breadcrumb-item active">
                    <strong>Bloglar</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box">

                            <div>
                                <img src="@item.Image" height="225" width="240">
                            </div>
                            <div class="product-desc">
                                <span class="product-price">
                                    @(((DateTime)item.CreateDate).ToString("dd-MMM-yyy"))
                                </span>
                                <small class="text-muted">@item.CategoryId</small>
                                <a href="#" class="product-name"> @item.Title</a>



                                <div class="small m-t-xs">
                                    @item.Content.Substring(0,item.Content.Substring(0,50).LastIndexOf(" "))...
                                </div>
                                <div class="m-t text-righ">

                                    <a href="/Blog/BlogDetails/@item.Id" class="btn btn-xs btn-outline btn-primary">Detay<i class="fa fa-long-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }



        </div>




    </div>

</body>

</html>


