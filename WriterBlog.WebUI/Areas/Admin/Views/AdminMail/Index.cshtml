@using WriterBlog.Entities.Concrete.Dtos;
@model List<ContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Mail Kutusu</h1>
<br />
<div class="mail-box">

    <table class="table table-hover table-mail">
        <tbody>
            @foreach (var item in Model)
            {
                if (item.Read == false)
                {
                    <tr class="unread">
                        <td class="check-mail">
                            <input type="checkbox" class="i-checks">
                        </td>
                        <td class="mail-ontact"><a href="/admin/adminmail/details/@item.Id">@item.UserName</a></td>
                        <td class="mail-subject"><a href="/admin/adminmail/details/@item.Id">@item.Subject</a></td>
                        <td class=""><i class="fa fa-paperclip"></i></td>
                        <td class="text-right mail-date">@(
                    ((DateTime)item.CreateDate).ToString("dd-MMM-yyyy")
                    )</td>
                    </tr>
                }
                else
                {
                    <tr class="read">
                        <td class="check-mail">
                        <input type="checkbox" class="i-checks">
                    </td>
                    <td class="mail-ontact"><a href="/admin/adminmail/details/@item.Id">@item.UserName</a></td>
                    <td class="mail-subject"><a href="/admin/adminmail/details/@item.Id">@item.Subject</a></td>
                    <td class=""></td>
                    <td class="text-right mail-date">@(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))</td>
                </tr>
                }
            }
        </tbody>
    </table>

</div>