@using WriterBlog.Entities.Concrete.Dtos;
@model List<BlogDto>

<div class="row">
	<div class="col-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Son Blogların</h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th> # </th>
								<th> Başlık </th>
								<th> Kategori </th>
								<th> Tarih </th>
								<th> Detaylar </th>
								
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
							<tr>
								<td>
									<img src="@item.Image" class="mr-2" alt="image"> 
										</td>
									<td>
									@item.Title
								</td>
								<td>
									<label class="badge badge-gradient-success">@item.CategoryId</label>
								</td>
								<td> @(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy")) </td>
								<td> 
									<a href="/blog/details/@item.Id" class="btn btn-dark">Detaylar</a>
								</td>
							</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
